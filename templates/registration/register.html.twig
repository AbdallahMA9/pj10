{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<center>
    <h1>S'inscrire</h1>

    {{ form_start(registrationForm) }}

    {{ form_row(registrationForm.lastName, {'label': 'Nom de famille'}) }}
    {{ form_row(registrationForm.firstName, {'label': 'Prénom'}) }}
    {{ form_row(registrationForm.email, {'label': 'Adresse e-mail'}) }}
    {{ form_row(registrationForm.plainPassword, {'label': 'Mot de passe'}) }}

    <button class="button button-submit">Continuer</button>
    <a href="{{ path('app_login') }}" class="link-logout">Vous avez déjà un compte ?</a>

    {{ form_end(registrationForm) }}
</center>
{% endblock %}
