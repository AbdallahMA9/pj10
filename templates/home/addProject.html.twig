{% extends 'base.html.twig' %}

{% block body %}

    <div id="main-container">
        <nav>
            <a href="{{ path('app_home') }}" id="logo">
            <img src="{{ asset('img/logo.png') }}" alt="Logo TaskLinker" />
            </a>
            <ul id="main-menu">
                <li class="active">
                    <a href="{{ path('app_home') }}">
                    <i class="fa-solid fa-list-check"></i> Projets
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_users') }}">
                    <i class="fa-regular fa-user"></i> Équipe
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_logout') }}">
                    <i class="fas fa-sign-out-alt"></i> Déconnexion
                    </a>
                </li>
            </ul>
        </nav>
        <main>
        <header>
            <div id="current-user"></div>
            <div id="title-page">
                <h1>Nouveau projet</h1>
            </div>
        </header>
        <div id="content">
            {{ form_start(projectForm) }}
                <div><label for="projet_nom" class="required">Titre du projet</label>{{ form_widget(projectForm.name, {'attr': {'hidden': true}}) }}</div>
                <div>
                    <label for="projet_employes">Inviter des membres</label>
                    {{ form_widget(projectForm.users, {'attr': {'hidden': true}}) }}
                </div>
                <br>
                <button class="button button-submit">Continuer</button>
            {{ form_end(projectForm) }}
        </div>
        </main>
    </div>

{% endblock %}