{% extends 'base.html.twig' %}

{% block body %}

        <div id="main-container">
            <nav>
            <a href="{{ path('app_home') }}" id="logo">
            <img src="{{ asset('img/logo.png') }}" alt="Logo TaskLinker" />
            </a>
            <ul id="main-menu">
                <li class="active">
                    <a href="{{ path('app_home') }}">
                    <i class="fa-solid fa-list-check"></i> Projets
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_users') }}">
