{% extends 'base.html.twig' %}

{% block body %}

      <div id="main-container">
         <nav>
            <a href="{{ path('app_home') }}" id="logo">
            <img src="img/logo.png" alt="Logo TaskLinker" />
            </a>
            <ul id="main-menu">
               <li class="active">
                  <a href="index.html">
                  <i class="fa-solid fa-list-check"></i> Projets
                  </a>
               </li>
               <li>
                  <a href="employes.html">
                  <i class="fa-regular fa-user"></i> Équipe
                  </a>
               </li>
            </ul>
         </nav>
         <main>
            <header>
               <div id="current-user"></div>
               <div id="title-page">
                  <h1>{{task.title}}</h1>
               </div>
            </header>
            <div id="content">
                {{ form_start(taskForm) }}
                    <div><label for="tache_titre" class="required">Titre de la tâche</label>{{ form_widget(taskForm.title, {'attr': {'hidden': true}}) }}</div>
                    <div><label for="tache_description">Description</label>{{ form_widget(taskForm.description, {'attr': {'hidden': true}}) }}</div>
                    <div class="flex-form">
                    <div><label for="tache_deadline">Date</label>{{ form_widget(taskForm.deadline, {'attr': {'hidden': true}}) }}</div>
                    <div><label for="tache_statut">Statut</label>{{ form_widget(taskForm.statutId, {'attr': {'hidden': true}}) }}</div>
                  </div>
                  <div>
                     <label for="tache_employe">Membre</label>
                     <select id="tache_employe" name="tache[employe]">
                        <option value=""></option>
                        <option value="13">Natalie Dillon</option>
                        <option value="14">Demi Baker</option>
                     </select>
                  </div>
                  <br>
                  <button class="button button-submit">Modifier</button>
                <a href="{{ path('app_task_delete',{'id': task.id}) }}" class="delete-task">Supprimer la tâche</a>
               {{ form_end(taskForm) }}
            </div>
         </main>
      </div>
{% endblock %}
